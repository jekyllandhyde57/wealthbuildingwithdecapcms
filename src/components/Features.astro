---
interface Props {
  title: string;
  features: Array<{
    title: string;
    description: string;
    icon: string;
  }>;
}

const { title, features } = Astro.props;
---

<section class="py-16 bg-gray-50">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-4xl md:text-5xl font-cormorant-bold text-center mb-12">{title}</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {features.map(feature => (
        <div class="bg-white p-8 rounded-lg shadow-sm hover:shadow-md transition-shadow text-center">
          <div class="text-5xl mb-4">{feature.icon}</div>
          <h3 class="text-2xl font-cormorant-bold mb-4 text-gray-900">{feature.title}</h3>
          <p class="text-xl text-gray-600">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>