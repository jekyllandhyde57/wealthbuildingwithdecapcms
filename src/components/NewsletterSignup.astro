---
interface Props {
  title: string;
  description: string;
  buttonText: string;
  privacyText: string;
}

const { title, description, buttonText, privacyText } = Astro.props;
---

<section class="py-20 bg-gray-50">
  <div class="max-w-4xl mx-auto px-4">
    <div class="bg-white rounded-2xl shadow-xl p-8 md:p-12">
      <div class="text-center mb-8">
        <h2 class="text-4xl md:text-5xl font-cormorant-bold text-gray-900 mb-6">
          {title}
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          {description}
        </p>
      </div>
      
      <form class="max-w-md mx-auto">
        <div class="flex flex-col sm:flex-row gap-4">
          <input 
            type="email" 
            placeholder="Enter your email address"
            class="flex-1 px-4 py-3 text-lg rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
            required
          />
          <button 
            type="submit"
            class="px-6 py-3 bg-[#3c4a41] text-white font-cormorant-bold text-2xl rounded-lg hover:bg-primary-600 transition-colors"
          >
            {buttonText}
          </button>
        </div>
        <p class="text-base text-gray-500 mt-4 text-center">
          {privacyText}
        </p>
      </form>
    </div>
  </div>
</section>