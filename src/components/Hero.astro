---
interface Props {
  title: string;
  subtitle: string;
  description: string;
  primaryCTA: string;
  secondaryCTA: string;
  backgroundImage: string;
}

const { title, subtitle, description, primaryCTA, secondaryCTA, backgroundImage } = Astro.props;
---

<section class="relative min-h-[70vh] flex items-center justify-center overflow-hidden">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0 z-0">
    <img
      src={backgroundImage}
      alt="Investment background"
      class="w-full h-full object-cover"
      width="1920"
      height="1080"
    />
    <div class="absolute inset-0 bg-gradient-to-br from-primary-500/90 to-accent-500/90 mix-blend-multiply"></div>
  </div>

  <div class="container mx-auto px-4 py-12 md:py-20 relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-cormorant-bold text-white mb-6 leading-tight">
        {title}
      </h1>
      <p class="text-2xl md:text-3xl lg:text-4xl font-cormorant-bold text-white/90 mb-8 leading-relaxed">
        {subtitle}
      </p>
      <p class="text-xl md:text-2xl lg:text-3xl text-white/80 mb-10 font-cormorant">
        {description}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="#get-started" 
          class="inline-flex items-center justify-center px-8 py-4 rounded-lg bg-white text-primary-600 text-2xl font-cormorant-bold hover:bg-gray-100 transition-colors"
        >
          {primaryCTA}
        </a>
        <a 
          href="#learn-more" 
          class="inline-flex items-center justify-center px-8 py-4 rounded-lg border-2 border-white text-white text-2xl font-cormorant-bold hover:bg-white/20 transition-colors"
        >
          {secondaryCTA}
        </a>
      </div>
    </div>
  </div>
</section>