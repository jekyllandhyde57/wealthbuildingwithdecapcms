<section class="py-16 bg-primary-color text-white">
  <div class="max-w-4xl mx-auto px-4 text-center">
    <h2 class="text-3xl font-bold mb-4">Stay Updated</h2>
    <p class="mb-8">Get the latest investment tips and updates delivered to your inbox.</p>
    <form class="max-w-md mx-auto flex flex-col md:flex-row gap-4">
      <input 
        type="email" 
        placeholder="Enter your email"
        class="flex-1 px-4 py-2 rounded-md text-gray-800 focus:outline-none focus:ring-2 focus:ring-accent-color"
        required
      />
      <button 
        type="submit"
        class="bg-accent-color hover:bg-opacity-90 px-6 py-2 rounded-md transition-colors"
      >
        Subscribe
      </button>
    </form>
  </div>
</section>