---
interface Props {
  title: string;
  contact: {
    email: string;
    phone: string;
    address: string;
    submitButtonText: string;
  };
}

const { title, contact } = Astro.props;
---

<section class="py-16 bg-white" id="contact">
  <div class="max-w-4xl mx-auto px-4">
    <h2 class="text-4xl md:text-5xl font-cormorant-bold text-center mb-12">{title}</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
      <div>
        <h3 class="text-2xl font-cormorant-bold mb-6">Contact Information</h3>
        <div class="space-y-6">
          <p class="text-xl">
            <span class="font-cormorant-bold">Email:</span>
            <a href={`mailto:${contact.email}`} class="text-primary-500 hover:underline">
              {contact.email}
            </a>
          </p>
          <p class="text-xl">
            <span class="font-cormorant-bold">Phone:</span>
            <a href={`tel:${contact.phone}`} class="text-primary-500 hover:underline">
              {contact.phone}
            </a>
          </p>
          <p class="text-xl">
            <span class="font-cormorant-bold">Address:</span>
            <br />
            {contact.address}
          </p>
        </div>
      </div>
      <div>
        <form class="space-y-6">
          <div>
            <label for="name" class="block text-xl font-cormorant-bold mb-2">Name</label>
            <input 
              type="text" 
              id="name" 
              class="w-full px-4 py-3 text-lg rounded-md border focus:outline-none focus:ring-2 focus:ring-primary-500"
              required
            />
          </div>
          <div>
            <label for="email" class="block text-xl font-cormorant-bold mb-2">Email</label>
            <input 
              type="email" 
              id="email" 
              class="w-full px-4 py-3 text-lg rounded-md border focus:outline-none focus:ring-2 focus:ring-primary-500"
              required
            />
          </div>
          <div>
            <label for="message" class="block text-xl font-cormorant-bold mb-2">Message</label>
            <textarea 
              id="message" 
              rows="4"
              class="w-full px-4 py-3 text-lg rounded-md border focus:outline-none focus:ring-2 focus:ring-primary-500"
              required
            ></textarea>
          </div>
          <button 
            type="submit"
            class="w-full bg-[#3c4a41] text-white py-3 rounded-md hover:bg-primary-600 transition-colors font-cormorant-bold text-2xl"
          >
            {contact.submitButtonText}
          </button>
        </form>
      </div>
    </div>
  </div>
</section>