---
interface Props {
  title: string;
  testimonials: Array<{
    name: string;
    role: string;
    content: string;
    image: string;
  }>;
}

const { title, testimonials } = Astro.props;
---

<section class="py-16 bg-gray-50">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-4xl md:text-5xl font-cormorant-bold text-center mb-12">{title}</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {testimonials.map(testimonial => (
        <div class="bg-white p-8 rounded-lg shadow-md h-full flex flex-col">
          <img 
            src={testimonial.image} 
            alt={testimonial.name}
            width="100"
            height="100"
            class="w-24 h-24 rounded-full mx-auto mb-6 object-cover"
          />
          <p class="text-xl text-gray-600 italic mb-6 flex-grow">{testimonial.content}</p>
          <div class="text-center mt-auto">
            <h4 class="text-xl font-cormorant-bold">{testimonial.name}</h4>
            <p class="text-lg text-gray-500">{testimonial.role}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>