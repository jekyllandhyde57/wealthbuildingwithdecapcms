---
interface Props {
  title: string;
  description: string;
  primaryButton: string;
  secondaryButton: string;
}

const { title, description, primaryButton, secondaryButton } = Astro.props;
---

<section class="py-20 bg-gradient-to-br from-primary-500 to-primary-700">
  <div class="max-w-4xl mx-auto px-4 text-center">
    <h2 class="text-3xl md:text-4xl font-cormorant-bold text-white mb-6">
      {title}
    </h2>
    <p class="text-lg text-white/90 mb-8 max-w-2xl mx-auto">
      {description}
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a 
        href="/get-started" 
        class="inline-flex items-center justify-center px-8 py-3 rounded-lg bg-white text-primary-600 font-cormorant-bold text-xl hover:bg-gray-100 transition-colors"
      >
        {primaryButton}
      </a>
      <a 
        href="/book-call" 
        class="inline-flex items-center justify-center px-8 py-3 rounded-lg border-2 border-white text-white font-cormorant-bold text-xl hover:bg-white/10 transition-colors"
      >
        {secondaryButton}
      </a>
    </div>
  </div>
</section>